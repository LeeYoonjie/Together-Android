<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 그림자 효과 -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="@color/white" />
            <padding
                android:top="4dp"
                android:bottom="8dp"
                android:left="4dp"
                android:right="4dp" />
        </shape>
    </item>

    <!-- 배경 색상 -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>