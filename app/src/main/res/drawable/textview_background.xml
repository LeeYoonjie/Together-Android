<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 배경 색상 -->
    <solid android:color="#F2F2F2" /> <!-- 밝은 회색 배경 -->

    <!-- 모서리 둥글기 -->
    <corners android:radius="8dp" />

    <!-- 테두리 -->
    <stroke
        android:width="1dp"
        android:color="#DADADA" /> <!-- 연한 회색 테두리 -->

    <!-- 내부 패딩 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>